@{
    Layout = null;
}
<style>
    .input {
        width: 500px;
    }
</style>

<div class="container-fluid" ng-controller="productFormController as vm">
    <div class="breadcrumb text-success">
        <h3 ng-if="!vm.id">Thêm sản phẩm</h3>
        <h3 ng-if="vm.id">Sửa sản phẩm</h3>
    </div>

    <form class="form-horizontal" action="" method="post" id="frmAdd" name="frmAdd" novalidate>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Tên sản phẩm <span class="text-danger">*</span>:</label>
            <div class="col-sm-6">
                <input type="text" ng-model="vm.product.Name" name="name" id="name" class="k-textbox input" placeholder="Tên sản phẩm..." value="{{product.Name}}" required />
            </div>

        </div>
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Mã sản phẩm </label>
            <div class="col-sm-4">
                <input type="text" ng-model="vm.product.ProductCode" name="code" id="code" class="input k-textbox" placeholder="Để trống để tự phát sinh mã..." value="{{product.Code}}" width="100" />
            </div>


        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Danh mục <span class="text-danger">*</span>:</label>
            <div class="col-sm-6">
                <select id="categories" name="categories" kendo-combo-box
                        k-placeholder="'Chọn danh mục sản phẩm...'"
                        k-data-text-field="'CategoryName'"
                        k-data-value-field="'Id'"
                        k-filter="'contains'"
                        k-auto-bind="true"
                        k-data-source="vm.categories"
                        k-value-primitive="true"
                        k-ng-model="vm.product.ProductCategoryId"
                        style="width: 35%"
                        required>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="price" class="col-sm-2 control-label">Giá <span class="text-danger">*</span>:</label>
            <div class="col-sm-6">
                <input kendo-numeric-text-box
                       type="number" name="price" id="price"
                       k-ng-model="vm.product.Price" required min="0" style="width: 35%;" k-options="vm.price" k-placeholder="'Giá sản phẩm...'" /> &nbsp;VNĐ
            </div>

        </div>

        <div class="form-group">
            <label for="price" class="col-sm-2 control-label">Mô tả sản phẩm</label>
            <div class="col-sm-6">
                @*<textarea id="editor" name="editor" ng-model="vm.product.Description"></textarea>*@
                <textarea placeholder="Mô tả sản phẩm..." id="description" class="form-control" rows="4" ng-model="vm.product.Description"></textarea>
            </div>

        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button ng-click="vm.save()" type="button" class="btn btn-sm btn-primary" )">Lưu</button>
                <button ng-click="vm.back()" type="button" class="btn btn-sm btn-danger">Trở lại</button>
            </div>
        </div>
    </form>
</div>
<script>
    CKEDITOR.replace('editor');
</script>
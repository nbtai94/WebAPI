<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a ui-sref="home" class="navbar-brand">Web API App</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a ui-sref="home" class="active">Trang chủ</a>
                    </li>
                    <li>
                        <a ui-sref="list">Sản phẩm</a>
                    </li>
                    <li>
                        <a ui-sref="customer">Khách hàng</a>
                    </li>
                    <li>
                        <a ui-sref="order">Đơn hàng</a>
                    </li>
                    <li>
                        <a ui-sref="contact">Liên hệ</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>



    <div class="container body-content" ui-view>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/1.0.22/angular-ui-router.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angularjs-toaster/1.1.0/toaster.min.js"></script>

    <link href="~/Content/toaster.css" rel="stylesheet" />
    <script src="~/Scripts/angular-animate.js"></script>

    <script src="~/Scripts/ui-bootstrap-tpls-2.5.0.min.js"></script>
    <script src="~/App/app.js"></script>
    <script src="~/App/Controller/ListProductController.js"></script>
    <script src="~/App/Controller/FormController.js"></script>
    <script src="~/App/Controller/ListCustomer.js"></script>
    <script src="~/App/Controller/CustomerFormController.js"></script>
    <script src="~/App/Controller/OrderController.js"></script>




</body>
</html>

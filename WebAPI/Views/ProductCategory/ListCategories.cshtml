        <div class="form-group">
            <select id="customer" name="customer" kendo-combo-box
                    k-placeholder="'Search'"
                    k-data-text-field="'Name'"
                    k-data-value-field="'Id'"
                    k-filter="'contains'"
                    k-auto-bind="true"
                    k-data-source="vm.dropdowns"
                    ng-model="vm.dropdowns.Id"
                    style="width:10%"
                    ng-required="true">
            </select>
            <input type="search"
                   id="searchBox" class="k-textbox"
                   ng-model="vm.key" placeholder="Tìm kiếm..." style="width: 100%"
                   ng-keydown="$event.keyCode === 13 && vm.search(vm.key,vm.dropdowns.Id)" />
            <button type="button" id="btnSearch"
                    class="btn btn-sm btn-default"
                    ng-click="vm.search(vm.key,vm.dropdowns.Id)">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <div kendo-grid="vm.grid" options="vm.mainGridOptions"></div>


    </div>


@{ Layout = null;}
<style>

    th {
        text-align: center;
    }

    .table > tbody > tr > td {
        vertical-align: middle;
    }

    .form-group {
        margin: 0;
    }

    .mgt-20 {
        margin-top: 20px;
    }

    .table1 {
        overflow-y: scroll;
        height: 550px;
        display: block;
    }

    .table2 {
        overflow-y: scroll;
        height: 450px;
        display: block;
    }
</style>

<div ng-controller="OrderFormController as vm" class="container">

    <div class="breadcrumb col-md-12">
        <h3 class="text-success text-center" ng-if="!vm.id">TẠO ĐƠN HÀNG</h3>
        <h3 class="text-success text-center" ng-if="vm.id">SỬA ĐƠN HÀNG</h3>
    </div>
    <div class="row">
        <form id="frmAdd" name="frmAdd" novalidate>
            <div class="col-md-12">
                <button type="button" class="btn btn-sm btn-primary" ng-click="vm.save()">Lưu</button>
                <button type="button" class="btn btn-sm  btn-default " ng-click="vm.back()">Quay lại</button>

            </div><hr />

            <div class="form-group form-inline col-md-12 mgt-20">
                <div class="row">
                    <div class="col-md-6">

                        <div class="row">
                            <div class="form-group col-md-8">
                                <label>Khách hàng: </label>
                                <select id="customer" name="customer" kendo-combo-box
                                        k-placeholder="'Chọn khách hàng'"
                                        k-data-text-field="'Name'"
                                        k-data-value-field="'Id'"
                                        k-filter="'contains'"
                                        k-auto-bind="true"
                                        k-data-source="vm.customers"
                                        ng-model="vm.order.CustomerId"
                                        style="width: 75%"
                                        ng-required="true">
                                </select>
                            </div>
                            <div class="form-group">
                                <i class="fa fa-check text-success" ng-show="frmAdd.customer.$dirty && frmAdd.customer.$valid"></i>
                                <span ng-show=" frmAdd.customer.$invalid" class="text-danger">Vui lòng chọn khách hàng!.</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class=" form-group">
                                <label>Ngày đặt hàng:</label>
                                <input  kendo-date-picker
                                       k-ng-model="vm.order.DateOrder"
                                       style="width: 50%;" />
                            </div>
                            <div class="form-group">
                                <i class="fa fa-check text-success" ng-show="frmAdd.datepicker.$dirty && frmAdd.datepicker.$valid"></i>
                                <span ng-show=" frmAdd.datepicker.$invalid" class="text-danger">Vui lòng chọn ngày đặt hàng!.</span>
                            </div>
                 
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
    <hr />


    <div class="row">
        <div class="col-md-4 table-chooseProduct">
            <table class="table table-striped table-hover table-bordered  table1 ">

                <tr class="active">
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                </tr>

                <tr ng-repeat="item in vm.products" ng-click="vm.select(item)">
                    <td width="20%"><img ng-src="../../Content/Images/{{item.Id}}/product.jpg" class="img-responsive" alt="NO-IMAGE" /></td>
                    <td class="text-center">{{item.Name}}</td>
                    <td class="text-right">{{(item.Price|number)+" VNĐ"}}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-8">
            <table class="table table-hover table-striped table-bordered  table2" style="width:100%">
                <tr class="active">
                    <th width="5%">STT</th>
                    <th width="20%">Sản phẩm</th>
                    <th width="15%">Số lượng</th>
                    <th width="25%">Đơn giá</th>
                    <th width="20%">Thành tiền</th>
                    <th width="10%">Thao tác</th>
                </tr>
                <tr ng-if="vm.id" ng-repeat="item in vm.order.Items">
                    <td class="text-right">{{$index+1}}</td>
                    <td class="text-center">{{item.ProductName}}</td>
                    <td class="text-right"><input id="numeric" kendo-numeric-text-box k-min="0" k-max="100" k-ng-model="item.Quantity" k-options="vm.quantity" style="width:100%" ng-model-options="{updateOn:'blur'}" /></td>
                    @*<td width="15%"><input type="text" name="price" ng-model="item.Price" value="{{item.Price}}" class="form-control" ng-model-options="{updateOn:'blur'}" /></td>*@
                    <td class="text-right"> <input kendo-numeric-text-box id="currency" type="number" ng-model="item.Price" min="0" style="width: 70%;" k-options="vm.price" /> VNĐ</td>
                    <td class="text-right">{{(item.Quantity*item.Price|number)+" VNĐ"}}</td>
                    <td><button type="button" class="btn btn-sm btn-danger" ng-click="vm.remove($index)">Xóa</button></td>
                </tr>

            </table>
        </div>
        <div class="pull-right">
            <h3 class="text-info">Tổng tiền: <span class="text-danger">{{(vm.getTotal()|number)+" VNĐ"}}</span></h3>
        </div>


    </div>
</div>

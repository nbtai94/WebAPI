@{ Layout = null;}
<style>

    th {
        text-align: center;
    }

    .table > tbody > tr > td {
        vertical-align: middle;
    }

    .form-group {
        margin: 0;
    }
    .mgt-20{
        margin-top:20px;
    }
 
</style>

<div ng-controller="OrderFormController as vm" class="container">

    <div class="breadcrumb col-md-12">
        <h3 class="text-success text-center" ng-if="!vm.id">TẠO ĐƠN HÀNG</h3>
        <h3 class="text-success text-center" ng-if="vm.id">SỬA ĐƠN HÀNG</h3>
    </div>
    <div class="row">
        <form id="frmAdd" name="frmAdd" novalidate>
            <div class="col-md-12">
                <button type="button" class="btn btn-sm btn-primary" ng-click="vm.save()" >Lưu</button>
                <button type="button" class="btn btn-sm  btn-default " ng-click="vm.back()">Bỏ qua</button>

            </div><hr />
          
            <div class="form-group form-inline col-md-12 mgt-20">
                <div class="row">
                    <div class="col-md-6">

                        <div class="row">
                            <div class="form-group col-md-8">
                                <label>Khách hàng: </label>
                                <select id="customer" name="customer" kendo-combo-box
                                        k-placeholder="'Chọn khách hàng'"
                                        k-data-text-field="'Name'"
                                        k-data-value-field="'Id'"
                                        k-filter="'contains'"
                                        k-auto-bind="true"
                                        k-data-source="vm.customers"
                                        style="width: 75%"
                                        ng-model="vm.customer.Id" ng-required="true">
                                </select>
                            </div>
                          
                            <div class="form-group">
                                <i class="fa fa-check text-success" ng-show="frmAdd.customer.$dirty && frmAdd.customer.$valid"></i>
                                <span ng-show=" frmAdd.customer.$invalid" class="text-danger">Vui lòng chọn khách hàng!.</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="row">
                            <div class=" form-group">
                                <label>Ngày đặt hàng:</label>
                                <input name="datepicker" id="datepicker" kendo-date-picker
                                       ng-model="vm.datepicker"
                                       k-ng-model="dataObject"
                                       style="width: 50%;" ng-required="true" />
                            </div>
                            <div class="form-group">
                                <i class="fa fa-check text-success" ng-show="frmAdd.datepicker.$dirty && frmAdd.datepicker.$valid"></i>
                                <span ng-show=" frmAdd.datepicker.$invalid" class="text-danger">Vui lòng chọn ngày đặt hàng!.</span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>
    <hr />


    <div class="row">
        <div class="col-md-4 table-chooseProduct">
            <table class="table table-striped table-hover table-bordered text-center ">

                <tr class="active">
                    @*<th>Ảnh</th>*@
                    <th>Tên sản phẩm</th>
                    <th>Giá</th>
                </tr>

                <tr ng-repeat="item in vm.products" ng-click="vm.select(item)">
                    @*<td width="20%"><img ng-src="../../Content/Images/{{item.Id}}/product.jpg" class="img-responsive" alt="NO-IMAGE" /></td>*@
                    <td>{{item.Name}}</td>
                    <td>{{(item.Price|number)+" VNĐ"}}</td>
                </tr>
            </table>
        </div>
        <div class="col-md-8">
            <table class="table table-hover table-striped table-bordered text-center table-responsive" style="width:100%">
                <tr class="active">
                    <th>STT</th>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                    <th></th>
                </tr>
                <tr ng-repeat="item in vm.listItems">
                    <td>{{$index+1}}</td>
                    <td>{{item.ProductName}}</td>
                    <td width="15%"><input type="number" min="1" name="quantity" ng-model="item.Quantity" value="" class="form-control" ng-model-options="{updateOn:'blur'}" /></td>
                    <td width="15%"><input type="text" name="price" ng-model="item.Price" value="{{item.Price}}" class="form-control" ng-model-options="{updateOn:'blur'}" /></td>
                    <td>{{(item.Quantity*item.Price|number)+" VNĐ"}}</td>
                    <td><button type="button" class="btn btn-sm btn-danger" ng-click="vm.remove($index)">Xóa</button></td>
                </tr>
                <tr>
                    <th colspan="5" class="info">Tổng tiền</th>
                    <th colspan="2" align="center" class="danger">{{(vm.getTotal()|number)+" VNĐ"}}</th>
                </tr>
            </table>
        </div>
    </div>
</div>

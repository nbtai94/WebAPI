
@{
    Layout = null;
}

<style>
    .customer {
        padding: 20px;

    }

    .pd-20{
        padding:20px;
    }
    .customer{
        border:1px solid black;
        margin-bottom:5px;
    }
    
</style>

<div ng-controller="OrderDetailController as vm" class="container">
    <div class="breadcrumb">
        <h3 class="text-center text-info">Thông tin đơn hàng</h3>
    </div>
    <div class="pd-20">
        <div class="customer">


            <h4>Thông tin khách hàng:</h4>
            <h4 class="text-primary">Tên: {{vm.order.CustomerName}}</h4>
            <h4 class="text-primary">Số điện thoại: {{vm.order.CustomerPhone}}</h4>
            <h4 class="text-primary"> Địa chỉ :{{vm.order.CustomerAddress}}</h4>

            <hr />
        </div>
        <div class="customer">
            <h4>Thông tin sản phẩm:</h4>
            <table class="table table-hover table-striped table-bordered">
                <tr class="active">
                    <th>STT</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
                <tr ng-repeat="item in vm.order.Items">
                    <td>{{$index+1}}</td>
                    <td>{{item.ProductName}}</td>
                    <td>{{item.Quantity}}</td>
                    <td>{{(item.Price|number)+" VNĐ"}}</td>
                    <td>{{(item.Price*item.Quantity|number)+" VNĐ"}}</td>
                </tr>
            </table>
            <hr />
                <h4 class="text-right">
                    Tổng tiền : <span class="text-danger">
                        {{(vm.order.TotalMoney|number)+" VNĐ"}}
                    </span>
                </h4>
        </div>
    </div>
    </div>


@{
    Layout = null;
}

<style>
    .customer {
        padding: 20px;
        -webkit-box-shadow: 5px 5px 15px -10px #000000;
        box-shadow: 5px 5px 15px -10px #000000;
    }

 

    .fa-boxes {
        font-size: 100px;
        color: #d4d4d4;
    }

    .product {
        padding: 20px;
        -webkit-box-shadow: 5px 5px 15px -10px #000000;
        box-shadow: 5px 5px 15px -10px #000000;
    }
</style>

<div ng-controller="OrderDetailController as vm" class="container">
    <div class="breadcrumb">
        <h3 class="text-info text-center">Thông tin đơn hàng</h3>
    </div>
    <button class="btn btn-sm btn-danger" ng-click="vm.back()">Quay lại</button><hr />
    <div class="row">
        <div class="col-md-4 customer">         

            <div style="margin-left:20px;">
                <h4 class="text-warning">Tên khách hàng: <span class="text-primary">{{vm.order.CustomerName}}</span></h4>
                <h4 class="text-warning">Số điện thoại: <span class="text-primary">{{vm.order.CustomerPhone}}</span></h4>
                <h4 class="text-warning">Địa chỉ: <span class="text-primary">{{vm.order.CustomerAddress}}</span></h4>
                <h4 class="text-warning">Ngày đặt hàng: <span class="text-primary">{{vm.order.DateOrder|date:"dd/MM/yyyy"}}</span></h4>
            </div>
        </div>
        <div class="col-md-8 product">
            <div class="text-center">
            </div>
            <table class="table table-hover table-striped">

                <tr class="warning">
                    <th>STT</th>
                    <th>Ảnh</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>


                <tr ng-repeat="item in vm.order.Items">
                    <td>{{$index+1}}</td>
                    <td width="10%"><img ng-src="../../Content/Images/{{item.Id}}/product.jpg" class="img-responsive" alt="NO-IMAGE" /></td>
                    <td>{{item.ProductName}}</td>
                    <td>{{item.Quantity}}</td>
                    <td>{{(item.Price|number)+" VNĐ"}}</td>
                    <td>{{(item.Price*item.Quantity|number)+" VNĐ"}}</td>

            </table>
            <hr />
            <div class="pull-right">
                <h3 class="text-primary">
                    Tổng tiền : <span class="text-danger">
    {{(vm.order.TotalMoney|number)+" VNĐ"}}
</span>
                </h3>
            </div>
        </div>
    </div>

</div>